<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/status.text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:maxLines="3"
                android:background="@drawable/post_text_bg"
                android:hint="@string/post_box_hint"/>

            <Button
                android:id="@+id/postbox.post"
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="?android:attr/buttonBarButtonStyle"
                android:text="{faw-send}"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/status.button"
                android:text="{faw-pencil} STATUS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/photo.button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="{faw-camera} PHOTO"
                style="?android:attr/buttonBarButtonStyle"
                android:gravity="center"/>
            <Button
                android:id="@+id/checkin.button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="{faw-map-marker} CHECK IN"
                style="?android:attr/buttonBarButtonStyle"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>